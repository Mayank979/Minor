<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="../css/StarRating.css">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css">
  <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="../css/show.css">
    <link rel="stylesheet" href="../css/finalRegister.css">
    <link rel="stylesheet" href="../css/homestyle.css">
    <link rel="stylesheet" href="../css/main.css">
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/0.6.0/p5.js"></script>
    <script src="../js/p5.speech.js"></script>
   <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
   <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

  <title>FlutterBox</title>

</head>
<body>

 <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
   <a class="navbar-brand" href="/">Flutter Box</a>
   <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
     <span class="navbar-toggler-icon"></span>
   </button>

   <div class="collapse navbar-collapse" id="navbarSupportedContent">
     <ul class="navbar-nav mr-auto">
       <!-- <li class="nav-item">
         <a class="nav-link" href="#">Link</a>
       </li> -->
       <li class=" nav-item dropdown">
         <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button" aria-haspopup="true" aria-expanded="false" data-toggle="dropdown" href="#">
           Categories
         </a>
         <div class="dropdown-menu" aria-labelledby="navbarDropdown">
           <% category.forEach(function(categories){%>
           <a class="dropdown-item" href="/<%=categories%>"><%= categories%></a>
           <%})%>
           <div class="dropdown-divider"></div>
           <a class="dropdown-item" href="#">View All</a>
         </div>
       </li>
    </ul>
</div>

    <% if (!currentUser) { %>
      <ul class="navbar-nav ml-auto">
        <li class="nav-item">
          <a class="nav-link" href="#" data-toggle="modal" data-target="#logIn">
           LogIn
         </a>
       </li>
      </ul>
    <ul class="navbar-nav ml-auto">
      <li class="nav-item">
        <a class="nav-link" href="#" data-toggle="modal" data-target="#signUp">
         Sign Up
       </a>
     </li>
    </ul>
    <% } else {%>
    <ul class="navbar-nav ml-auto">
     <li class="nav-item">
       <img src="<%= currentUser.image%>" class="round_image" alt="">
     </li>
     <li class="nav-item">
       <a href="#" class="nav-link"><%= currentUser.username[0].toUpperCase()%><%= currentUser.username.slice(1)%></a>
     </li>
    <li class="nav-item">
      <a href="/logout " class='nav-link'>Logout</a>
    </li>

    </ul>
    <% } %>

 </nav>

 <div class="container flash-message">
   <% if(error && error.length > 0){%>
   <div class="alert alert-danger" role="alert">
     <%= error%>
   </div>
   <% } %>
 <% if(success && success.length > 0){%>
   <div class="alert alert-success" role="alert">
     <%= success%>
   </div>
   <% } %>
 </div>

 <div class="modal fade" id="signUp" tabindex="-1" role="dialog" aria-labelledby="signUpTitle" aria-hidden="true">
   <div class="modal-dialog modal-dialog-centered user_auth" role="document">
     <div class="modal-content">
       <div class="modal-body">
         <h1 style="text-align:center">Sign up</h1><br><br>


    <form action="/register" method="POST">
       <input type="text" name="name" placeholder="Name" class="sign-up-name" />
       <input type="text" name="username" placeholder="Username" class="sign-up-username" required />
       <input type="email" name="email" placeholder="E-mail" class="sign-up-email"/>
       <input type="password" name="password" placeholder="Password" class="sign-up-password" required/>
       <input type="submit"  value="Sign me up" />
    </form>
       <div class="right signUp-right">

         <button class="social-signin facebook signUp" id="button">Log in with facebook</button>
         <button class="social-signin google signUp"><a href="/google" class="google-login-text">Log in with Google+</a></button>

       </div>
       </div>
     </div>
   </div>
 </div>




  <div class="modal fade" id="logIn" tabindex="-1" role="dialog" aria-labelledby="logInTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-body">
          <h1 style="text-align:center">Log In</h1><br><br>

        <form action="/login" method="post">
          <input type="text" name="username" placeholder="Enter Username" class="login-text"/>
          <input type="password" name="password" placeholder="Enter Password" class="login-passowrd"/>
          <input type="submit"  value="Log In" />
        </form>
        <div class="right logIn-right">

          <button class="social-signin facebook logIn" id="button" >Log in with facebook</button>
          <button class="social-signin google logIn"><a href="/google" class="google-login-text">Log in with Google+</a></button>

        </div>
        </div>
        </div>
      </div>
    </div>
