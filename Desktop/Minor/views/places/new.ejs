<% include ../partials/header%>



<div class="container">

<form action="/new" method="POST" enctype="multipart/form-data">
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputName">Name</label>
      <input type="text" class="form-control" id="inputName" name="name" placeholder="Enter Place name...">
    </div>
    <div class="form-group col-md-6">
      <label class="mr-sm-2" for="inlineFormCustomSelect">Category</label>
        <select class="custom-select mr-sm-2" id="inlineFormCustomSelect" name="category">
          <% category.forEach(function(category){%>
            <option ><%= category%></option>
        <% }) %>
      </select>
    </div>
    </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputCity">City</label>
      <input type="text" class="form-control" name="city" id="inputCity" placeholder="City">
    </div>
    <div class="form-group col-md-6">
      <label for="inputZip">Zip</label>
      <input type="text" class="form-control" name="pincode" id="inputZip" placeholder="Pincode">
    </div>
  </div>
  <div class="form-group">
    <label for="">Upload file</label>
    <div class="custom-file">
    <input type="file" name="image" class="custom-file-input" id="validatedCustomFile" required multiple>
    <label class="custom-file-label" for="validatedCustomFile">Choose file...</label>
  </div>
  </div>
  <div class="form-group">
  <label for="Description">Description:</label>
  <textarea class="form-control textarea" name="description" rows="5" id="description" placeholder="Write your text here....."></textarea>
  <span class="fa fa-microphone" id="textAreaSpeech"></span>
</div>

  <button type="submit" class="btn btn-primary">Add Place</button>
</form>

</div>

<script>
$("#textAreaSpeech").on("click", function(){
  var input = new p5.SpeechRec();
  input.onResult = showResult;
  input.start();

  function showResult()
  {
    if(input.resultValue){
      console.log(input.resultString);
      $(".textarea").append(input.resultString);
      $(".textarea").append(" ");
    }


  }
});

</script>

<% include ../partials/footer%>
